<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>

        </transformations>

    <primitives>
    
        <primitive id="demoRectangle">
            <rectangle x1="-6" y1="-1" x2="0" y2="1" />
        </primitive>
       
        <primitive id="demoTriangle">
            <triangle x1="0" y1="0" z1="0" x2="6" y2="0" z2="0" x3="3" y3="3" z3="0"  />
        </primitive>

         <primitive id="demoCylinder">
            <cylinder  base="2" top="1" height ="2" slices="30"  stacks="3" />
        </primitive>

         <primitive id="demoSphere">
            <sphere radius="2" slices="20" stacks="10" />
        </primitive>

       <primitive id="demoTorus">
            <torus inner="1" outer="2" slices="30" loops="20" />
        </primitive>
    
    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
<!--
          
            <children>
                <primitiveref id="demoTriangle" />
            </children>
             <children>
                <primitiveref id="demoCylinder" />
            </children>
            <children>
                <primitiveref id="demoSphere" />
            </children>
-->
        </component>

        <component id= "TV">
            <transformation>
                <scale x="0.5" y="0.5" z="1"/>
                <translate x="6" y="2"/>
             </transformation>

        <materials>
                <material id="inherit" />
        </materials>

         <children>
                <primitiveref id="demoRectangle" />
        </children>

        </component>

        </component>

        <component id= "suporteTV">
            <transformation>
             <scale x="0.5" y="0.5" z="1"/>
            </transformation>

        <materials>
                <material id="inherit" />
        </materials>

         <children>
                <primitiveref id="demoTriangle" />
        </children>

        </component>


        <component id= "mesa">
            <transformation>
                <rotate axis= "x" angle="90"/>
                <scale x="0.25" y="0.25" z="1"/>
                <translate x = "6" z="3"/>
            </transformation>

        <materials>
                <material id="inherit" />
        </materials>

         <children>
                <primitiveref id="demoTriangle" />
        </children>

        </component>

        <component id = "sofa">
             <materials>
                <material id="inherit" />
             </materials>

             <children>
                <primitiveref id="baseSofa" />
                <primitiveref id="centroSofa"/>
                <primitiveref id="topoSofa"/>
             </children>
        </component>

        <component id = "baseSofa">
                     <transformation>
                        <rotate axis= "x" angle="90">
                        <scale x="0.25" y="0.25" z="1"/>
                        <translate x = "3" z="3"/>
                    </transformation>

                    <materials>
                            <material id="inherit" />
                    </materials>

                     <children>
                            <primitiveref id="demoTorus" />
                    </children>

        </component>

           <component id = "centroSofa">
                     <transformation>
                        <scale x="0.25" y="0.25" z="1"/>
                        <translate x = "3" z="3"/>
                    </transformation>

                    <materials>
                            <material id="inherit" />
                    </materials>

                     <children>
                            <primitiveref id="demoSphere" />
                    </children>

        </component>


           <component id = "topoSofa">
                     <transformation>
                        <rotate axis= "x" angle="-45"/>
                        <scale x="0.25" y="0.25" z="1"/>
                        <translate x = "3" z="3"/>
                    </transformation>

                    <materials>
                            <material id="inherit" />
                    </materials>

                     <children>
                            <primitiveref id="demoTorus" />
                    </children>

        </component>


    </components>
</lxs>